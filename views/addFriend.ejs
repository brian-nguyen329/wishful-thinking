<% layout('layouts/boilerplate')%>
<script src="./js/friends.js"></script>

<h2 class="text-center mb-4"> Search for a Friend</h2>
<div id="custom-search-input">
    <div class="justify-content-center"> <!-- removed input-group-->
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
        <div>
        <ul id="myUL">
        <% for (let friend of data.friends){%>   
        <li><a href="#"><%= friend.name %></a></li>
        <% } %>
        </ul>
        </div>
    </div>
</div>

<div class="justify-content-center d-flex mt-5">
    <a href="/friends"><button type="button" class="btn btn-danger btn-sm">Cancel</button></a>
</div>